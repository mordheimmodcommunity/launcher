{
  "name": "mod-launcher",
  "version": "1.0.0",
  "description": "ElectronJS",
  "main": "./dist/electron.js",
  "scripts": {
    "start": "run-p start-electron start-dev",
    "start-electron": "npm run build && electron ./dist/electron.js",
    "start-dev": "webpack-dev-server",
    "build": "webpack --config ./webpack.config.js",
    "build:prod": "webpack --config ./webpack.prod.config.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "electron-builder install-app-deps",
    "pack": "npm run build:prod && electron-builder --dir",
    "dist": "npm run build:prod && electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mordheimmodcommunity/launcher.git"
  },
  "author": "Kroma",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mordheimmodcommunity/launcher/issues"
  },
  "homepage": "https://github.com/mordheimmodcommunity/launcher#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix -c .eslintCI.json"
    ]
  },
  "build": {
    "appId": "com.mordheim.launcher",
    "productName": "launcher",
    "directories": {
      "output": "./release"
    },
    "files": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "./icon.png"
    },
    "linux": {
      "target": "deb"
    }
  },
  "devDependencies": {
    "7zip-min": "^1.1.1",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-angular": "^8.3.4",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "electron": "^8.2.2",
    "electron-builder": "^22.5.1",
    "electron-reload": "^1.5.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "extract-zip": "^2.0.0",
    "html-webpack-plugin": "^4.2.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  }
}
